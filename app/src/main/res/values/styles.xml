<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ThemeFullSCreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="linear_wrap_vertical" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_wrap_horizon" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="question_bg" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="linear_question" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="guide_line_vertical" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="guide_line_horizontal" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="textwrap" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cl_textsetting</item>
    </style>
    <style name="textwrapNew" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/cl_textsetting_new</item>
    </style>
    <style name="textwrapTitle" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cl_textsetting_new</item>
    </style>
    <style name="textItemFami" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@mipmap/bg_field_text</item>
    </style>

    <style name="textTitle" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="edtInfo" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_setting_item" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_color</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="text_setting_item_new" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@mipmap/bg_border_item_field_new</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/cl_textsetting_new</item>
    </style>

    <style name="text_number" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colortext</item>
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>

    <style name="frame_qua" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">gone</item>

    </style>


</resources>