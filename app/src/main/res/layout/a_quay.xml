<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/a_quay_ct"
    android:background="@mipmap/bg_quay"
    tools:context=".Splash">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_ver_quay"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.13"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_text"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.585"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_h3"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.17"
        />



    <ImageView
        android:id="@+id/a_quay_icon_rotate"
        android:src="@mipmap/icon_rotate"
        app:layout_constraintStart_toStartOf="@id/line_ver_quay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.58"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:src="@mipmap/icon_fami"
        app:layout_constraintStart_toStartOf="@id/a_quay_icon_rotate"
        app:layout_constraintEnd_toEndOf="@id/a_quay_icon_rotate"
        app:layout_constraintTop_toTopOf="@id/a_quay_icon_rotate"
        app:layout_constraintBottom_toBottomOf="@id/a_quay_icon_rotate"
        app:layout_constraintHeight_percent="0.133"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:src="@mipmap/icon_arrow"
        app:layout_constraintStart_toStartOf="@id/a_quay_icon_rotate"
        app:layout_constraintEnd_toEndOf="@id/a_quay_icon_rotate"
        app:layout_constraintTop_toTopOf="@id/gd_h3"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintDimensionRatio="101:144"
        android:layout_width="0dp"
        android:layout_height="0dp"/>



    <TextView
        android:id="@+id/a_quay_tv_batdau"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/line_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="721:121"
        app:layout_constraintHeight_percent="0.08"
        android:background="@mipmap/bg_bnt_batdauquay"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/title_lan"
        android:text="@string/soluotquay"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/a_quay_tv_batdau"
        app:layout_constraintStart_toStartOf="@id/a_quay_tv_batdau"
        app:layout_constraintEnd_toEndOf="@id/a_quay_tv_batdau"
        />

</androidx.constraintlayout.widget.ConstraintLayout>