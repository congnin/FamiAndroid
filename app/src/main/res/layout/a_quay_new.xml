<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_quay_ct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_quay_new"
    tools:context=".Splash">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_ver_quay"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.015" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_text_ver_start"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_text_ver_end"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.74" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_text_hor"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.63" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_h1"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.22" />


    <ImageView
        android:id="@+id/a_quay_icon_rotate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_rotate_new"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintStart_toStartOf="@id/line_ver_quay"
        app:layout_constraintTop_toTopOf="@id/gd_h1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_fami_new"
        app:layout_constraintBottom_toBottomOf="@id/a_quay_icon_rotate"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/a_quay_icon_rotate"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="@id/a_quay_icon_rotate"
        app:layout_constraintTop_toTopOf="@id/a_quay_icon_rotate" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_arrow_new"
        app:layout_constraintDimensionRatio="101:144"
        app:layout_constraintEnd_toEndOf="@id/a_quay_icon_rotate"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="@id/a_quay_icon_rotate"
        app:layout_constraintTop_toTopOf="@id/a_quay_icon_rotate" />


    <TextView
        android:id="@+id/a_quay_tv_batdau"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_gradient_green"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="BẮT ĐẦU QUAY"
        app:layout_constraintTop_toBottomOf="@id/line_text_hor"
        app:layout_constraintDimensionRatio="710:141"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintStart_toStartOf="@id/line_text_ver_start"
        app:layout_constraintEnd_toEndOf="@id/line_text_ver_end" />


    <TextView
        android:id="@+id/title_lan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/soluotquay"
        android:textColor="@color/cl_textsetting_new"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/a_quay_tv_batdau"
        app:layout_constraintEnd_toEndOf="@id/a_quay_tv_batdau"
        app:layout_constraintStart_toStartOf="@id/a_quay_tv_batdau"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>