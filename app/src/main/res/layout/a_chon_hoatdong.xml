<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_working_landing">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver1"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver2"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver3"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver4"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.61" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver5"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver6"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_top"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_bottom1"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_bottom2"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <View
        android:id="@+id/btn_sampling"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/gd_bottom1"
        app:layout_constraintEnd_toStartOf="@id/gd_ver2"
        app:layout_constraintStart_toEndOf="@id/gd_ver1"
        app:layout_constraintTop_toBottomOf="@id/gd_top" />

    <View
        android:id="@+id/btn_doiqua"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/gd_bottom1"
        app:layout_constraintEnd_toStartOf="@id/gd_ver4"
        app:layout_constraintStart_toEndOf="@id/gd_ver3"
        app:layout_constraintTop_toBottomOf="@id/gd_top" />

    <View
        android:id="@+id/btn_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/gd_bottom1"
        app:layout_constraintEnd_toStartOf="@id/gd_ver6"
        app:layout_constraintStart_toEndOf="@id/gd_ver5"
        app:layout_constraintTop_toBottomOf="@id/gd_top" />

    <TextView
        android:id="@+id/edt_diadiem"
        style="@style/edtInfo"
        android:background="@mipmap/bg_border_item_field_new"
        android:inputType="text"
        app:layout_constraintDimensionRatio="570:87"
        app:layout_constraintEnd_toEndOf="@id/gd_ver2"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="@id/gd_bottom2" />
</androidx.constraintlayout.widget.ConstraintLayout>