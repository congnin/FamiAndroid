<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_game_landing">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver1"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver2"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_ver3"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_bottom1"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_bottom2"
        style="@style/guide_line_horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <View
        android:id="@+id/btn_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/gd_ver1"
        app:layout_constraintEnd_toEndOf="@id/gd_ver2"
        app:layout_constraintBottom_toBottomOf="@id/gd_bottom2"
        app:layout_constraintTop_toBottomOf="@id/gd_bottom1" />

    <View
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/gd_ver3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gd_bottom2" />


</androidx.constraintlayout.widget.ConstraintLayout>