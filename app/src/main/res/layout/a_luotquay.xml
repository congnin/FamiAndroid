<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/a_luotquay_ct"
    android:background="@mipmap/bg_luotquay"
    tools:context=".Splash">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_center_ver"
        style="@style/guide_line_vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/img_center"
        android:src="@mipmap/bg_num_quay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1288:500"
        app:layout_constraintHeight_percent="0.45"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:textColor="@color/red"
        android:layout_marginRight="15dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:text="10"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="@id/img_center"
        app:layout_constraintEnd_toEndOf="@id/line_center_ver"
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>